{% extends 'base.html.twig' %}

{% block title %}Pays{% endblock %}

{% block body %}
    
    <div class="text-center">
        <h1>Liste des Pays</h1>
        <a href="{{ path('pays_new') }}" class="btn btn-success"><i class="fa fa-plus"></i>Ajouter Pays</a>
    </div>
    <table class="table table-striped container">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Nombre de villes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pay in pays %}
            <tr>
                <td>{{ pay.id }}</td>
                <td>{{ pay.label }}</td>
                {% set nombreVilles = pay.villes|length %}
                <td class="{{ nombreVilles ==0 ? 'text-danger'}}">{{ nombreVilles == 0 ? 'Vide': nombreVilles }}</td>
                <td>
                    <a href="{{ path('pays_show', {'id': pay.id}) }}" class="btn btn-primary">
                        <i class="fa fa-eye"></i>
                    </a>
                    <a href="{{ path('pays_edit', {'id': pay.id}) }}" class="btn btn-warning">
                        <i class="fa fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
