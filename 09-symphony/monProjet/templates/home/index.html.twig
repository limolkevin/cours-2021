<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px/1.5 sans-serif;
  }
  .example-wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
</style>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div
        id="carouselExampleControls"
        class="carousel slide"
        data-bs-ride="carousel"
      >
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img
              height="500px"
              src="{{ asset('./asset/images/pshomme.png') }}"
              class="d-block w-100"
              alt="..."
            />
          </div>
          <div class="carousel-item">
            <img
              height="500px"
              src="{{ asset('./asset/images/bibGroupe.png') }}"
              class="d-block w-100"
              alt="..."
            />
          </div>
          <div class="carousel-item">
            <img
              height="500px"
              src="{{ asset('./asset/images/bibfemme.png') }}"
              class="d-block w-100"
              alt="..."
            />
          </div>
        </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExampleControls"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExampleControls"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid mt-2">
  <div class="row">
    <h1 class="text-center">Dernier Articles</h1>
    {% for article in articles %}
    <div class="col-md-3 col-sm-4 col-lg-2 mb-5 pb-4  mx-auto">
      <div class="card mb-3">
        <h3 class="card-header">Article NÂ°{{ article.id }}</h3>
        <div class="card-body">
          <h5 class="card-title">{{ article.titre }}</h5>
          <h6 class="card-subtitle text-muted">{{ article.categorie }}</h6>
        </div>
       <img src="{{ article.img }}" alt="">
        <div class="card-body">
          <p class="card-text">
           {{ article.description }}
          </p>
        </div>
      
        <div class="card-body text-center">
          <a href="{{ path('article_avance_show', { id: article.id }) }}" class="card-link btn btn-secondary">Voir plus...</a>
        </div>
        <div class="card-footer text-muted">{{ article.dateCreation |date("d/m/Y") }}</div>
      </div>
    </div>
    {% endfor %}
  </div>
  <div class="row">
    <div class="col-12">
      <img class="w-100" height="400px" src="{{ asset('asset/images/blog.jpg') }}" alt="">
    </div>
  </div>
