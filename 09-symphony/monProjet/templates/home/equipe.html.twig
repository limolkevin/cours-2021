 <div class="row">
    <h1 class="text-center">Notre équipe</h1>
    {% for personne in personnes %}
    <div class="col-md-3 col-sm-4 col-lg-2 mb-5 pb-4  mx-auto">
      <div class="card mb-3 cardNoBorder">
        <h3 class="card-header bg-primary text-center text-white">Personne N°{{ personne.id }}</h3>
        <div class="card-body">
          <h5 class="card-title text-center">{{ personne.prenom }} {{ personne.nom }}</h5>
          
        </div>
       {% if personne.sexe == "Homme" %}
               <img class="w-100 rounded rounded-circle" src="{{ asset('asset/images/homme.png') }}" alt="">
       {% else %}
         <img class="w-100 rounded rounded-circle" src="{{ asset('asset/images/femme.png') }}" alt="">
       {% endif %}
        <div class="card-body">
          <p class="card-text">
           Email: {{ personne.email }}
              <br>
            Sexe: {{ personne.sexe }}
           <br>
            Date de naissance: {{ personne.dateNaiss |date("d/m/Y") }}
          </p>
        </div>
      
        <div class="card-body text-center">
          <a href="#" class="card-link btn btn-secondary">Voir plus...</a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>