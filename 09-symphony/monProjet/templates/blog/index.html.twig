{% extends 'base.html.twig' %} {% block title %}Hello BlogController!{% endblock
%} {% block body %}
<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px/1.5 sans-serif;
  }
  .example-wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
</style>

<div class="container">
  <div class="row">
    {% for article in articles %}

    <div class="col-4">
      <div class="d-block p-2 border border-dark rounded m-1">
        <a href="{{ path('article_show', { id: article.id }) }}">
          <h2>{{ article.titre }}</h2>
        </a>
        <h6>{{ article.categorie }}</h6>
        <p>{{ article.description }}</p>
      </div>
    </div>

    {% endfor %}
  </div>
</div>
{% endblock %}
