{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    
    <div class="text-center">
        <h1>Liste des Categorie</h1>
        <a href="{{ path('categorie_new') }}" class="btn btn-success"> <i class="fa fa-plus"></i> Ajout Cat√©gorie</a>
    </div>
    <table class="table table-striped container">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Nombre des Articles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.label }}</td>
                <td>{{ categorie.blogs |length }}</td>
                <td>
                    <a href="{{ path('categorie_show', {'id': categorie.id}) }}" class="btn btn-primary">
                        <i class="fa fa-eye"></i>
                    </a>
                    <a href="{{ path('categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning">
                        <i class="fa fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
