{% extends 'base.html.twig' %}

{% block title %}Hello CalculController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="text-center">Calcul surface et périmetre du rectangle</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form action="{{ path('calcul2') }}" method="post">
                    <label for="hauteur" class="text-left">hauteur</label>
                    <input type="number" name="hauteur" value="{{ hauteur is defined ? hauteur : 0 }}" min="0" id="hauteur" class="form-control">
                    <label for="Largeur" class="text-left">Largeur</label>
                    <input type="number" name="largeur" value="{{ largeur is defined ? largeur : 0 }}" min="0" id="largeur" class="form-control">
                  <div class="text-center mt-2">
                    <input type="submit" class="btn btn-success" value="Calculer">
                    <input type="reset" class="btn btn-danger" value="Effacer">
                  </div>
                </form>
            </div>
            <div class="col-md-6 bg-light">
                {% if perimetre is defined %}
                    <h4>perimetre: ({{hauteur}}+{{largeur}})*2 ={{ perimetre }}</h4>
                {% endif %}
                {% if surface is defined %}
                    <h4>surface: {{hauteur}}*{{largeur}} ={{ surface }}</h4>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <a class="btn btn-success" href="{{ path('moyenne_eleve') }}">Moyenne élève</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
