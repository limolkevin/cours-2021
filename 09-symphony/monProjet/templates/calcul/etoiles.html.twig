{% extends 'base.html.twig' %} {% block title %}Hello CalculController!{%
endblock %} {% block body %}
<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px/1.5 sans-serif;
  }
  .example-wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
</style>

<div class="example-wrapper">
  <h1 class="text-center">Moyenne élève</h1>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <form action="{{ path('affiche_etoiles') }}" method="post">
          <label for="etoiles" class="text-left">Afficher des étoiles</label>
          <input
            type="number"
            title="Entrer valeur entre 1 et 10"
            name="etoilesInput"
            value="{{ etoiles ? etoiles : 0 }}"
            min="1"
            max="10"
            id="etoilesInput"
            class="form-control"
          />
          <div class="text-center mt-2">
            <input
              type="submit"
              onClick="alert(etoilesInput.value)"
              class="btn btn-success"
              value="Afficher"
            />
            <input type="reset" class="btn btn-danger" value="Effacer" />
          </div>
        </form>
      </div>
      {% if etoiles is defined %}
      <div class="col-md-6 bg-light" id="resultatSection">
        {% for star in range(1, etoiles, 1) %}
        <i class="fa fa-star text-warning fa-2x"></i>
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}
